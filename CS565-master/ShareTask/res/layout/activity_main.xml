<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_padding"
    tools:context="com.deepak.mytestsharetask.MainActivity"
    android:orientation="vertical" >
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/label_groupHeading"
        android:text="@string/group_heading"
        android:textColor="@color/bg_gradient_end"
        android:textSize="20sp"/>

    <ListView
        android:id="@+id/list_groupInfo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@color/bg_gradient_start" >
    </ListView>

</LinearLayout>